num_str = "123.45"
integer = 10
is_positive = True

dot_count = 0
is_number = True

for ch in num_str:
    if ch == ".":
        dot_count += 1
        if dot_count > 1:
            is_number = False
            break
    elif not ch.isdigit():
        is_number = False
        break

if is_number:
    num_float = float(num_str)
    result = num_float * integer
    print("Result:", result)
    if is_positive:
        print("The result is positive.")
    else:
        print("The result is negative.")
else:
    print("Error: The string is not a valid number.")
